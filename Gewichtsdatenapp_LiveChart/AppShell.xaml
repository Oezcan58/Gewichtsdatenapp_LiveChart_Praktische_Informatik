<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Gewichtsdatenapp_LiveChart.View"
    x:Class="Gewichtsdatenapp_LiveChart.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#1E1E1E"
    Shell.TitleColor="White"
    Shell.TabBarBackgroundColor="#444"
    Shell.TabBarTitleColor="LightGreen"
    Shell.TabBarUnselectedColor="White">

    <TabBar>
        <Tab Title="Eingabe">
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}" />
        </Tab>
        <Tab Title="Werte">
            <ShellContent ContentTemplate="{DataTemplate view:WerteSeite}" />
        </Tab>
        <Tab Title="Grafik">
            <ShellContent ContentTemplate="{DataTemplate view:GrafenSeite}" />
        </Tab>
    </TabBar>

</Shell>
